<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.media.*?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="480.0" prefWidth="280.0" spacing="20.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.login.LoginController">
   <children>
      <VBox alignment="CENTER" prefHeight="280.0" prefWidth="100.0">
         <children>
            <ImageView fitHeight="155.0" fitWidth="268.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../images/basketball.jpg" />
               </image>
            </ImageView>
         </children>
      </VBox>
      <HBox alignment="CENTER" spacing="30.0">
         <children>
            <Label text="아이디" />
            <TextField fx:id="idTxtFld" prefHeight="25.0" prefWidth="130.0" />
         </children>
      </HBox>
      <HBox alignment="CENTER" spacing="20.0">
         <children>
            <Label text="비밀번호" />
            <PasswordField fx:id="pwTxtFld" prefHeight="25.0" prefWidth="130.0" />
         </children>
      </HBox>
      <HBox alignment="CENTER" spacing="30.0">
         <children>
            <Button fx:id="loginBtn" mnemonicParsing="false" onAction="#handleLoginBtn" text=" 로그인 " />
            <Button fx:id="joinBtn" mnemonicParsing="false" onAction="#handleJoinBtn" text="회원가입" />
            <Button fx:id="exitBtn" mnemonicParsing="false" onAction="#handleExitBtn" text=" 종 료 " />
         </children>
      </HBox>
   </children>
</VBox>
